.icon--nav
  position relative
  display block
  width rem(23)
  height rem(3)
  background-color $color--white
  transition background-color 0.4s ease-out

  &:before
  &:after
    content ''
    position absolute
    left 0
    right 0
    background-color inherit
    height rem(3)

  &:before
    bottom 100%
    margin-bottom rem(4)

  &:after
    top 100%
    margin-top rem(4)
