//
// EASYDROPDOWN
// ============
// EasyDropDown plugin styles
//


// BASE TRANSITION
.dropdown
.dropdown div
.dropdown li
.dropdown .carat
.dropdown .carat:after
.dropdown:after
  transition border-color 200ms, height 200ms, opacity 200ms

// WRAPPER
.dropdown
  box-sizing border-box
  position relative
  width 100%
  cursor pointer
  user-select none
  padding rem(7) rem(10)
  line-height 24px
  background $color--aqua
  border 1px solid $color--teal

  &.open
    z-index 2
    border 1px solid $color--blue

  &.focus
    border 1px solid $color--blue


// CARAT
// Dropdown arrow on right

.dropdown

  .carat:after
    content ''
    position absolute
    top 50%
    right 50%
    margin-right -8px
    margin-top -4px
    border 8px solid transparent
    border-top 8px solid $color--teal
    z-index 2
    transform-origin 50% 20%
    .field--error &
      border-top-color $color--error

  .carat
    position absolute
    right 0
    width rem(50)
    top 0
    bottom 0
    border-left 1px solid $color--teal
    .field--error &
      border-color $color--error

  &.open

    .carat
      border-color $color--blue

      &:after
        transform rotate(180deg)
        border-top-color $color--blue


// ORIGINAL SELECT ELEMENT (HIDDEN)

.dropdown
  .old
    position absolute
    left 0
    top 0
    height 0
    width 0
    overflow hidden

  select
    position absolute
    left 0px
    top 0px
    font-size rem(16) // stop iOS zooming

  &.touch .old
    width 100%
    height 100%

  &.touch select
    width 100%
    height 100%
    opacity 0


// SELECTED FEEDBACK ITEM

.dropdown

  .selected
  li
    display block
    overflow hidden
    white-space nowrap

  div
    position absolute
    height 0
    left 0
    right 0
    top 100%
    margin 1px -1px 0
    background $color--aqua
    overflow hidden

  // Height is adjusted by JS on open
  &.open
    div
      z-index 2
      border-bottom 1px solid $color--blue


// DROP DOWN LIST

.dropdown
  ul
    position absolute
    left 0
    top 0
    height 100%
    width 100%
    list-style none
    overflow hidden

  &.scrollable.open
    ul
      overflow-y auto


// DROP DOWN LIST ITEMS

.dropdown
  ul li
    border-left 1px solid $color--blue
    border-right 1px solid $color--blue
    list-style none
    padding 0.25em 0.5em
    margin 0
    box-sizing border-box
    &:before
    &:after
      content none !important

  li.active
    font-weight 500

  // .focus class is also added on hover
  li.focus
    background $color--white
    position relative
    z-index 3
