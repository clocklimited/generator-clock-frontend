//- Page Specific
block metaAuthor
  if config.metaAuthor && config.metaAuthor != ''
    meta(name='author', content=config.metaAuthor)
block metaDescription
  if config.metaDescription && config.metaDescription != ''
    meta(name='description', content=config.metaDescription)
block metaKeywords
  if config.metaKeywords && config.metaKeywords != ''
    meta(name='keywords', content=config.metaKeywords)


